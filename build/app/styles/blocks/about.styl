.input-field
  clearfix()

.about
  margin-bottom 50px
.about__item
  margin-bottom 18px
  &-label
    float left
    margin-top 20px
  &-input
    font-family "Courier New"
    font-size 30px
    width 100%
    background-color transparent
    outline none
    border-style solid
    padding-bottom 7px
    padding-left 15px
    border-width 0px 0px 3px
    -moz-border-image url(../images/border.png) 0 5 3 repeat repeat
    -webkit-border-image url(../images/border.png) 0 5 3 repeat repeat
    -o-border-image url(../images/border.png) 0 5 3 repeat repeat
    border-image url(../images/border.png) 0 5 3 repeat repeat



.input-wrap
  overflow hidden
  padding-left 10px
