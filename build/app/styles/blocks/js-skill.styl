.js-skill
  margin: 0 auto
  margin-bottom 35px
  width: 757px
  &__title
    margin-bottom 25px
  &__label
    position relative
    display inline-block
    vertical-align top
    font-family $regular-font
    font-size 13px
    font-weight 700
    cursor pointer
    &:before
      content ''
      position absolute
      top -30px
      display inline-block
      width 3px
      height 24px
      background-color #422720
    &_first
      width 144px
    &_second
      width 227px
      &:before
        height 11px
    &_third
      width 175px
      &:before
        height 11px
    &_fourth
      width 198px
      text-align right
      &:before
        right 0
.label_small
  margin-bottom 15px
  font-size 15px!important
.slider
  margin-left auto !important
  margin-right auto !important
  margin-bottom 21px
  width 100%
  .dragger
    top -3px!important
    margin-left -9px!important
    width 16px
    height 16px
    background-image url(../images/jsdragger.png)
    background-repeat no-repeat
    transition .5s
  .track
    height 10px
    background-image url(../images/jsbar.png)
    background-repeat no-repeat
    background-position 100%

.jsSlider
  margin-bottom 21px
  width 100%
  height 16px
  -webkit-appearance: none
  background-color transparent
  background-image url(../images/jsbar.png)
  background-repeat no-repeat
  background-position 100%
  &::-webkit-slider-thumb
    -webkit-appearance none
  &:focus
    outline none
  &::-ms-track
    width 100%
    cursor pointer
    background transparent
    border-color transparent
    color transparent
  &::-webkit-slider-thumb
    margin-left -5px
    margin-bottom 20px
    width 16px
    height 16px
    background-image url(../images/jsdragger.png)
    background-repeat no-repeat
    transition .5s
    cursor pointer
  &::-moz-range-thumb
    margin-left -5px
    width 16px
    height 16px
    background-color transparent
    border transparent
    border-radius 1px
    background-image url(../images/jsdragger.png)
    background-position 100%
    background-repeat no-repeat
    transition .5s
    cursor: pointer
  &::-ms-thumb
    margin-left -5px
    margin-bottom 20px
    width 16px
    height 16px
    background-color transparent
    border none
    background-image url(../images/jsdragger.png)
    background-repeat no-repeat
    transition .5s
  &::-moz-range-track
    margin-bottom 21px
    width 100%
    height 16px
    background-color transparent
    background-image url(../images/jsbar.png)
    background-repeat no-repeat
    background-position 100%
  &::-ms-track
    margin-bottom 21px
    width 100%
    height 16px
    background-color transparent
    background-image url(../images/jsbar.png)
    background-repeat no-repeat
    background-position 100%
