.b-skills {
  clearfix()
}

.skills
  margin-bottom 70px
  clearfix()
  &__title
    margin-bottom 12px
  &__text
    position relative
    margin-bottom 25px
    padding-left 15px
    font-size 14px
    line-height 22px
    color #3d3d3d
    &:before
      content '*'
      position absolute
      display inline-block
      left 0
      top 8px
      font-size 36px
  &__col
    float left
    width 33.3%
  &__item
    display block
    margin-bottom 13px
    &-label
      position relative
      padding-left 30px
      display inline-block
      font-family $regular-font
      font-size 21px
      letter-spacing -1px
      font-weight 700
      color #000
      cursor pointer

    &-input
      display none
    &-input[type="checkbox"] + label
      &:before
        sprite($checkbox)
        content ""
        position absolute
        left 0
        top -8px
        display inline-block
        width 19px
        height 28px
        background-position 0 28px

    &-input[type="checkbox"]:checked + label
      &:before
        sprite($checkbox-checked)
        content ''
        position absolute
        left 0
        top -8px
        width 24px
        height 28px
        display inline-block


