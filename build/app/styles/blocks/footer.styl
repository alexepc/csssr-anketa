.footer
  padding-bottom 65px
.date-fill
  &__label
    float left
    margin-top 10px
    margin-right 5px
  &__input
    padding-left 8px
    width 210px
    font-family "Courier New", sans-serif
    font-size 30px
    background-color transparent
    outline none
    border-style solid
    border-width 0px 0px 3px
    -moz-border-image url(../images/border.png) 0 5 3 repeat repeat
    -webkit-border-image url(../images/border.png) 0 5 3 repeat repeat
    -o-border-image url(../images/border.png) 0 5 3 repeat repeat
    border-image url(../images/border.png) 0 5 3 repeat repeat